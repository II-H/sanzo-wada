{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true
  }
}